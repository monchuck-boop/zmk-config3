#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

#define DEFAULT 0
#define LOWER  1
#define RAISE  2
#define ADJUST 3

/* NOTE: At the time of the creation of this keymap, there are no specified codes for 'eisuu' and 'kana' input in ZMK.
However, 'LANG1' and 'LANG2' are fully-functioning candidates for 'kana' and 'eisuu' input respectively.
As such, those are in use within the default layer at this time.*/

/ {
    keymap {
        compatible = "zmk,keymap";

        base_layer {
            //* Base
            //   * ,-----------------------------------------.             ,-----------------------------------------.
            //   * |  C+z |   ;  |   [  |   (  |   <  |   {  |             |      |      |      |      |      |      |
            //   * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            //   * | KANA |   P  |   K  |   R  |   A  |   F  |             |      |      |      |      |      |      |
            //   * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            //   * |  BS  |   D  |   T  |   H  |   E  |   O  |             |      |      |      |      |      |      |
            //   * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            //   * | Shift|   Y  |   S  |   N  |   I  |   U  |Space |      |      |      |      |      |      |      |
            //   * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            //   * | Ctrl | Alt  | Gui  | Sym  | Num  | OPT  | Ent  |      |      |      |      |      |      |      |
            //   * `-------------------------------------------------------------------------------------------------'

            bindings = <
&kp LC(Z)         &kp SEMI  &kp JP_LBRACKET  &kp JP_LPAREN  &kp LT  &kp JP_LBRACE       &trans     &trans    &trans   &trans     &trans     &trans
&kp JP_HANZEN     &kp P     &kp K     &kp R     &kp A   &kp F                           &trans     &trans    &trans   &trans     &trans     &trans
&kp BSPC          &kp D     &kp T     &kp H     &kp E   &kp O                           &trans     &trans    &trans   &trans     &trans     &trans
&kp LEFT_SHIFT    &kp Y     &kp S     &kp N     &kp I   &kp U     &kp SPACE     &trans  &trans     &trans    &trans   &trans     &trans     &trans
&kp LEFT_CONTROL  &kp LALT  &mo 4  &mo 3     &mo 2   &mo 1     &kp RET         &trans   &trans     &trans    &trans   &trans     &trans     &trans
            >;
        };

        opt_layer {
            //* Opt
            // * ,-----------------------------------------.             ,-----------------------------------------.
            // * |  Esc |  :   |  ]   |  )   |  >   |  }   |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * |  EISU|   J  |   M  |   B  |   '  |  Tab |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * |   .  |   V  |   C  |   L  |   Z  |  Q   |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * |      |   X  |   G  |   W  |   -  |  Del | Esc  |      |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * |      |      |      |   ,  | DTOP |      |      |      |      |      |      |      |      |      |
            // * `-------------------------------------------------------------------------------------------------'         

            bindings = <
&kp ESC      &kp SINGLE_QUOTE  &kp JP_RBRACKET     &kp JP_RPAREN  &kp GT         &kp JP_RBRACE                      &trans     &trans    &trans   &trans     &trans     &trans
&kp JP_EISU  &kp J             &kp M               &kp B          &kp JP_QUOTE   &kp TAB                            &trans     &trans    &trans   &trans     &trans     &trans
&kp DOT      &kp V             &kp C               &kp L          &kp Z          &kp Q                               &trans     &trans    &trans   &trans     &trans     &trans
&trans       &kp X             &kp G               &kp W          &kp MINUS      &kp DEL          &kp ESC    &trans   &trans     &trans    &trans   &trans     &trans     &trans
&trans       &trans            &trans              &trans         &trans         &trans           &trans     &trans     &trans   &trans     &trans     &trans
            >;
        };

        num_layer {
            //* NUM
            // * ,-----------------------------------------.             ,-----------------------------------------.
            // * |　　　|     |       |  HOME |  END |TAB   |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * | 　　 | *   |   9   |   8  |  7  |   -   |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * |      |   / |   6 |   5  |   4  |   +   |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * |      |      |   3  |   2  |   1  |  0    |      |      |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * |      |      |   ,  |   .   |  0  |      |      |      |      |      |      |      |      |      |
            // * `-------------------------------------------------------------------------------------------------'

            bindings = <
&trans          &trans           &trans        &kp HOME      &kp END       &kp TAB                            &trans   &trans     &trans      &trans        &trans        &trans
&kp GRAVE       &kp JP_ASTERISK  &kp N9        &kp N8        &kp N7        &kp MINUS                         &kp N6   &kp N7     &kp N8      &kp N9        &kp N0        &kp DEL
&trans          &kp SLASH        &kp NUMBER_6  &kp N5        &kp NUMBER_4  &kp JP_PLUS                          &kp F6   &kp MINUS  &kp EQUAL   &kp LBKT      &kp RBKT      &kp BSLH
&kp KP_NUMLOCK  &kp LS(LC(F1))   &kp NUMBER_3  &kp NUMBER_2  &kp NUMBER_1  &kp N0       &trans    &trans  &trans   &trans     &kp PSCRN   &kp PG_DN     &kp PG_UP     &trans
&trans          &trans           &kp PERIOD    &kp COMMA     &kp N0        &trans       &trans    &trans  &trans   &trans     &kp C_NEXT  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_PP
            >;
        };

        sym_layer {
// ,-----------------------------------------.
// |  Ins |  GRV |      |  PU  |  PD  |   ^  |
// |------+------+------+------+------+------|
// |      |   \  |   #  |   =  |   ?  |   %  |
// |------+------+------+------+------+------|
// |      |   $  |   ↑  |   @  |   !  |   |  |
// |------+------+------+------+------+------+------.
// |  CL  |  <-  |   ↓  |  ->  |   _  |   &  |      |
// |------+------+------+------+------+------+------|
// |      |      |  PS  |      |   ~  |      | ￥     |
//  `-----------------------------------------------'            
            bindings = <
&kp INSERT  &kp EXCL              &trans           &kp PAGE_UP      &kp PG_DN        &kp JP_CARET                            &kp CARET        &kp AMPS         &kp ASTRK        &kp LPAR         &kp RPAR         &ext_power EP_TOG
&trans      &kp NON_US_BACKSLASH  &kp HASH         &kp JP_EQUAL        &kp QUESTION     &kp PERCENT                          &rgb_ug RGB_EFF  &rgb_ug RGB_HUI  &rgb_ug RGB_SAI  &rgb_ug RGB_SPI  &rgb_ug RGB_BRI  &rgb_ug RGB_TOG
&bt BT_NXT  &out OUT_TOG          &kp UP_ARROW     &kp AT_SIGN      &kp EXCLAMATION  &kp PIPE                             &rgb_ug RGB_EFR  &rgb_ug RGB_HUD  &rgb_ug RGB_SAD  &rgb_ug RGB_SPD  &rgb_ug RGB_BRD  &trans
&kp CAPS    &kp LEFT_ARROW        &kp DOWN_ARROW   &kp RIGHT_ARROW  &kp UNDERSCORE   &kp JP_AMPERSAND  &kp LBRC    &kp RBRC  &trans           &trans           &trans           &trans           &trans           &trans
&trans      &trans                &kp PRINTSCREEN  &trans           &kp TILDE        &trans         &kp JP_YEN     &trans    &trans           &trans           &trans           &trans           &trans           &trans
            >;
        };

        func_layer {
            bindings = <

            //* Func
            // * ,-----------------------------------------.             ,-----------------------------------------.
            // * |RGBRST|  Hue |      |  RST |  Mac |  Win |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * | RGB1 | VAL+ |  F7  |  F8  |  F9  |      |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------|             |------+------+------+------+------+------|
            // * | RGB2 | VAL- |  F4  |  F5  |  F6  | F12  |             |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * | RGB3 |  F10 |  F1  |  F2  |  F3  | F11  |      |      |      |      |      |      |      |      |
            // * |------+------+------+------+------+------+------+------+------+------+------+------+------+------|
            // * |RGBOFF|      |      |      |      |      |      |      |      |      |      |      |      |      |
            // * `-------------------------------------------------------------------------------------------------'
&bt BT_CLR     &trans  &kp F10  &kp F11  &kp F12  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&bt BT_DISC 0  &trans  &kp F7   &kp F8   &kp F9   &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans         &trans  &kp F4   &kp F5   &kp F6   &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans         &trans  &kp F1   &kp F2   &kp F3   &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans         &trans  &trans   &trans   &trans   &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        layer_5 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
